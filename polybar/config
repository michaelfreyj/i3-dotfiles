format-padding = 2
format-foreground = ${colors.date}

label =   %date% %time%

[module/hybrid-date]
type = custom/script
exec = ~/scripts/date.sh
tail = true
click-left = kill -USR1 %pid%

format = <label>
format-foreground = ${colors.date}
format-padding = 2
label =   %output%

